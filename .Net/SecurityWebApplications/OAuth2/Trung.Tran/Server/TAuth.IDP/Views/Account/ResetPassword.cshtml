@model ResetPasswordViewModel

<div class="register-page">
    <div class="lead">
        <h1>Reset password</h1>
    </div>

    <partial name="_ValidationSummary" />

    <div class="row">
        <div class="col-sm-6">
            <div class="card">
                <div class="card-header">
                    <h2>Reset your password</h2>
                </div>

                <div class="card-body">
                    @if (Model.IdentityConfirmed)
                    {
                        <form method="post">
                            <fieldset>
                                <input type="hidden" asp-for="UserId" />
                                <input type="hidden" asp-for="ResetPasswordToken" />
                                <input type="hidden" asp-for="IdentityConfirmed" />
                                <div class="form-group">
                                    <label asp-for="Password"></label>
                                    <input type="password" class="form-control" placeholder="Password" asp-for="Password" autocomplete="off">
                                </div>

                                <div class="form-group">
                                    <label asp-for="ConfirmPassword"></label>
                                    <input type="password" class="form-control" placeholder="Confirm Password" asp-for="ConfirmPassword" autocomplete="off">
                                </div>

                                <button class="btn btn-primary" name="button" value="submit">Submit</button>
                            </fieldset>
                        </form>
                    }
                    else
                    {
                        <form asp-action="RequestResetPassword" method="post">
                            <fieldset>
                                <div class="form-group">
                                    <label asp-for="RequestResetPasswordViewModel.UserName"></label>
                                    <input class="form-control" placeholder="Username" autofocus
                                           asp-for="RequestResetPasswordViewModel.UserName"
                                           name="@(nameof(RequestResetPasswordViewModel.UserName))" />
                                </div>

                                <button class="btn btn-primary" name="button" value="submit">Submit</button>
                            </fieldset>
                        </form>
                    }
                </div>
            </div>
        </div>
    </div>
</div>